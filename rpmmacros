%_signature gpg
%_gpg_path /root/.gnupg
%_gpg_name QMK Firmware (Official QMK GPG Signing Key)
%_gpgbin /usr/bin/gpg2
%__gpg_sign_cmd %{__gpg} gpg --force-v3-sigs --batch --verbose --no-armor --no-secmem-warning --pinentry-mode=loopback -u "%{_gpg_name}" -sbo %{__signature_filename} --digest-algo sha256 %{__plaintext_filename}'
